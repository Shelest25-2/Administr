#!/bin/bash — указывает, что это bash-скрипт

$# — количество переданных аргументов
$0 — имя самого скрипта
exit 1 — завершение с ошибкой
SECONDS — встроенная переменная, отсчитывает секунды с начала выполнения
date "+[%d.%m.%y %H:%M]" — форматирование даты
awk '{print $1, $2, $3}' — берёт первые 3 значения из /proc/loadavg
>> — добавляет строку в конец файла (не перезаписывает)
sleep 1 — пауза 1 секунда

Операторы сравнения
eq ne lt gt
le/ge Больше/меньше или равно

$(()) используется для вычислений. Переменные внутри не требуют $

[[ ]] - для регулярных выражений
Не требует экранирования спецсимволов (&&   ||)

if [ условие ]; then
    # код, если условие истинно
elif [ другое_условие ]; then
    # код, если истинно другое_условие
else
    # код, если все условия ложны
fi

awk - язык для обработки текста и извлечения данных
# Пример: Суммировать числа в третьем столбце
awk '{sum += $3} END {print sum}' file.txt
